resources:
- name: servervm
  type: compute.v1.instance # delcares teh instance as a base compute instance see -https://cloud.google.com/compute/docs/reference/rest/v1/instances
  properties:
    zone: europe-west2-a #set location for server at in house office location
    machineType: zones/europe-west2-a/machineTypes/n1-standard-1
    disks:
    - deviceName: boot
      type: PERSISTENT
      boot: true
      autoDelete: true
      initializeParams:
        sourceImage: projects/windows-cloud/global/images/family/windows-2019
    networkInterfaces:
    - subnet: {{ properties["subnetwork"] }} #gets the subnet from the yaml file